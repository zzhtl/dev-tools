{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "fs:default",
    "fs:allow-copy-file",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-write",
    "fs:allow-read-file",
    "fs:allow-read-dir",
    "dialog:default",
    "upload:default",
    "upload:allow-download",
    "upload:allow-upload",
    {
      "identifier": "fs:allow-read-file",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [{ "path": "**" }]
    }
  ]
}
